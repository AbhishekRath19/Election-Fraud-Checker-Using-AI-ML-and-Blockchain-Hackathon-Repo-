# Environment variables for the voting application

# Flask configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database configuration
DATABASE_URL=sqlite:///election.db

# Upload configuration
UPLOAD_FOLDER=static/images/ids

# Blockchain configuration
BLOCKCHAIN_PROVIDER_URL=http://127.0.0.1:7545
BLOCKCHAIN_CONTRACT_ADDRESS=your-contract-address-here
BLOCKCHAIN_ADMIN_PRIVATE_KEY=your-admin-private-key-here

# Maximum file upload size (16MB)
MAX_CONTENT_LENGTH=16777216